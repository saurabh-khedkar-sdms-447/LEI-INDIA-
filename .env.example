# Database Configuration
# Required: PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/leiindias

# JWT Authentication
# Required: Secret key for signing JWTs (must be at least 32 characters)
JWT_SECRET=your-secret-key-here-minimum-32-characters-long
# Optional: Token expiration time (default: 7d)
JWT_EXPIRES_IN=7d

# Application Configuration
# Required: Environment mode (development, production, test)
NODE_ENV=development
# Optional: Public application URL (for email links, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Optional: Public API URL (if different from app URL)
NEXT_PUBLIC_API_URL=

# Logging
# Optional: Log level (fatal, error, warn, info, debug, trace)
# Default: 'info' in production, 'debug' in development
LOG_LEVEL=debug

# Error Reporting (Sentry)
# Optional: Sentry DSN for error tracking
SENTRY_DSN=
# Optional: Sentry environment name
SENTRY_ENVIRONMENT=development

# Email Configuration
# Optional: Email service provider (resend, sendgrid, ses, aws-ses, nodemailer)
# If not set, emails will be logged to console in development
EMAIL_SERVICE=
# Optional: API key for email service (varies by provider)
EMAIL_API_KEY=
# Optional: From email address (default: noreply@example.com)
EMAIL_FROM=noreply@example.com

# Rate Limiting (Upstash Redis)
# Optional: Upstash Redis REST URL for distributed rate limiting
# If not provided, uses in-memory rate limiting (single instance only)
UPSTASH_REDIS_REST_URL=
# Optional: Upstash Redis REST token
UPSTASH_REDIS_REST_TOKEN=
